<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F5"
    tools:context=".MainActivity">

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Universitas Bhayangkara Jakarta Raya Profile"
        android:textSize="24sp"/>

    <ImageView
        android:paddingTop="5dp"
        android:id="@+id/imgUbj"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ubj1"/>

    <TextView
        android:textColor="#000000"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="140dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgUbj"
        android:text="@string/ubj_profile"
        android:justificationMode="inter_word"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:paddingLeft="10dp"
        android:text="Visi" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:text="Misi"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/btn1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/btn2"
        android:text="Info Fakultas"/>

    <Button
        android:id="@+id/btn4"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Prodi"/>

    <Button
        android:id="@+id/btn5"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/btn1"/>
</RelativeLayout>